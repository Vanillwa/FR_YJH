<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>View</title>
        <link rel="stylesheet" href="../../nav.css" />
        <link rel="stylesheet" href="../../member-view.css" />
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    </head>
    <body>
        <%- include ('nav.ejs') %>
        <section class="content">
            <h2>Member View</h2>
            <table>
                <tr>
                    <th>ID</th>
                    <td><%= data.id %></td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td><%= data.name %></td>
                </tr>
                <tr>
                    <th>Team</th>
                    <td><%= data.team %></td>
                </tr>
                <tr>
                    <th>Position</th>
                    <td><%= data.position %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= data.emailAddress %></td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td><%= data.phoneNumber %></td>
                </tr>
                <tr>
                    <th>AdmissionDate</th>
                    <td><%= data.admissionDate.toLocaleDateString() %></td>
                </tr>
                <tr>
                    <th>Birthday</th>
                    <td><%= data.birthday.toLocaleDateString() %></td>
                </tr>
            </table>
        </section>
    </body>
</html>
